{
    "extends": "./tsconfig.paths.json",
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "lib": ["esnext"],
        "moduleResolution": "node",
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "removeComments": true,
        "sourceMap": true,
        "target": "es2019",
        "outDir": "lib",
        "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": [
        "node_modules/**/*",
        ".serverless/**/*",
        ".webpack/**/*",
        "_warmup/**/*",
        ".vscode/**/*",
        "node_modules/mongoose/index.d.ts"
    ]
}
